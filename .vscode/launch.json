    "version": "0.2.0",
    "configurations": [
        {
            "name": "runner",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/bin/runner",
            "cwd": "${workspaceFolder}",
            "args": ["${workspaceFolder}/input.json"],
            "stopAtEntry": false,
            "externalConsole": false,
            "internalConsoleOptions":"neverOpen",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ],
            "postRemoteConnectCommands": [
                {
                    "text": "source ${workspaceFolder}/.vscode/.gdbinit"
                }
            ],
        },
        {
            "name": "runner-codelldb",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/runner",
            "cwd": "${workspaceFolder}",
            "args": ["${workspaceFolder}/input.json"],
            "initCommands": [
                "command source ${workspaceFolder}/.vscode/.lldbinit"
            ]
        },
        {
            "name": "runner-lldb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/runner",
            "cwd": "${workspaceFolder}",
            "args": ["${workspaceFolder}/input.json"],
            "MIMode": "lldb",
            "externalConsole": false,
            "environment": [],
            // "initCommands": ["command source ${workspaceFolder}/.vscode/.lldbinit"]
        },
        // {
        //     "name": "incompressible_flow",
        //     "type": "python",
        //     "request": "launch",
        //     "program": "${workspaceFolder}/incompressible_flow_in_channel.py",
        //     "console": "integratedTerminal",
        //     "justMyCode": true
        // },
    ]
}